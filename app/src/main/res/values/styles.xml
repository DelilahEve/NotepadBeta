        <!-- Text Colours -->
        <item name="textToolbar">@color/textLight</item>
        <item name="textContent">@color/textDark</item>
        <item name="textFaded">@color/textLightFaded</item>

        <!-- Images -->
        <item name="actionOptions">@drawable/action_options_dark</item>
        <item name="actionPlus">@drawable/action_plus_light</item>
        <item name="iconSettings">@drawable/action_settings_dark</item>
        <item name="iconTheme">@drawable/action_theme_dark</item>
