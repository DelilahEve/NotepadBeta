<?xml version="1.0" encoding="utf-8"?>

<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:drawable="@drawable/circle_shadow"
        android:top="2dp"
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp" />

    <item android:id="@+id/circle">

        <shape
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="oval" >

            <solid
                android:color="#FFF" />

            <size
                android:height="60dp"
                android:width="60dp" />

        </shape>

    </item>

</layer-list>